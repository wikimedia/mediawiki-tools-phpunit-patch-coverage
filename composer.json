{
  "name": "mediawiki/phpunit-patch-coverage",
  "description": "Generate coverage reports for git patches",
  "license": "GPL-3.0-or-later",
  "autoload": {
    "psr-4": {
      "MediaWiki\\Tool\\PatchCoverage\\": "src"
    }
  },
  "bin": [
    "bin/phpunit-patch-coverage"
  ],
  "require": {
    "php": ">=5.5.9",
    "legoktm/clover-diff": "^1.0.0",
    "nikic/php-parser": "^3.1.3",
    "symfony/console": "^3.4.2",
    "symfony/finder": "^3.4.2",
    "symfony/process": "^3.4.2",
    "wikimedia/scoped-callback": "^1.0.0"
  },
  "require-dev": {
    "mediawiki/mediawiki-codesniffer": "15.0.0",
    "phpunit/phpunit": "^4.8"
  },
  "scripts": {
    "test": [
      "phpcs -sp",
      "phpunit"
    ],
    "fix": [
      "phpcbf"
    ]
  }
}
